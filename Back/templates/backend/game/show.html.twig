{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Developer</th>
                <td>{{ game.developer }}</td>
            </tr>
            <tr>
                <th>Editor</th>
                <td>{{ game.editor }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ game.available ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ game.releaseDate ? game.releaseDate|date('Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('game_index') }}">back to list</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

    {{ include('backend/game/_delete_form.html.twig') }}
{% endblock %}
